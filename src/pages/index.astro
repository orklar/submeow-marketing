---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import Button from '../components/Button.astro';
import Mascot from '../components/Mascot.astro';
import CheckmarkIcon from '../components/icons/CheckmarkIcon.astro';
import XCrossIcon from '../components/icons/XCrossIcon.astro';

const softwareAppSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "SubMeow",
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "Android, Web",
  "offers": [
    {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD",
      "description": "Free plan"
    },
    {
      "@type": "Offer",
      "price": "0.99",
      "priceCurrency": "USD",
      "description": "Premium monthly"
    },
    {
      "@type": "Offer",
      "price": "9.99",
      "priceCurrency": "USD",
      "description": "Lifetime one-time"
    }
  ],
  "description": "SubMeow watches all your subscriptions so you never get surprised by charges again. Track trials, get reminders, and save money."
});

const faqSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Do I need to link my bank account?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No! SubMeow is completely privacy-focused. You manually add your subscriptions, so we never need access to your bank account or financial data."
      }
    },
    {
      "@type": "Question",
      "name": "Is the free plan really free forever?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! The free plan includes unlimited subscriptions and basic features with no time limit. You can use it forever without ever paying."
      }
    },
    {
      "@type": "Question",
      "name": "Can I cancel my premium subscription anytime?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Absolutely! No contracts, no commitments. Cancel anytime and you'll still have access until the end of your billing period. You can always downgrade to the free plan."
      }
    },
    {
      "@type": "Question",
      "name": "What platforms does SubMeow support?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "SubMeow works on web browsers and Android devices, with iOS coming soon. Your data syncs automatically across all platforms."
      }
    },
    {
      "@type": "Question",
      "name": "How do the reminders work?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You'll get push notifications before renewals and when trials are ending. Customize reminder timing in the app settings."
      }
    },
    {
      "@type": "Question",
      "name": "Does SubMeow work offline?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! SubMeow stores your data locally so you can track subscriptions even without internet. When you're back online, data syncs automatically to the cloud."
      }
    }
  ]
});

const schemas = [softwareAppSchema, faqSchema];
---

<MarketingLayout title="SubMeow - Track Your Subscriptions" description="SubMeow watches all your subscriptions so you never get surprised by charges again. Track trials, get reminders, and save money." schemaMarkup={schemas}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-cream/40 to-white">
