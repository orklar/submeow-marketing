---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import Button from '../components/Button.astro';
---

<MarketingLayout title="Help Center - SubMeow" description="Find answers to your questions about SubMeow. Browse help categories, popular articles, and get support for managing your subscriptions.">

  <!-- ==========================================
       Hero Section
       ========================================== -->
  <section class="relative overflow-hidden bg-gradient-to-b from-primary-50 via-cream/30 to-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-16 md:py-24 lg:py-32">
      <div class="text-center max-w-3xl mx-auto">
        <!-- Badge -->
        <span class="inline-block bg-primary-100 text-primary-500 px-4 py-1.5 rounded-full text-sm font-semibold mb-6">Support</span>

        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-dark-text leading-tight mb-6">
          Help <span class="text-accent-500">Center</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-lg md:text-xl text-light-text max-w-2xl mx-auto mb-10 leading-relaxed">
          Everything you need to get the most out of SubMeow. Browse topics, read guides, or search for answers below.
        </p>

        <!-- Search Bar (visual only) -->
        <div class="max-w-xl mx-auto relative">
          <div class="absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none" aria-hidden="true">
            <svg class="w-5 h-5 text-light-text" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input
            type="text"
            placeholder="Search for help articles..."
            aria-label="Search help articles"
            class="w-full pl-12 pr-6 py-4 rounded-2xl border border-gray-200 bg-white text-dark-text placeholder-gray-400 text-base shadow-sm transition-all focus:outline-none focus:ring-2 focus:ring-primary-500/40 focus:border-primary-500 focus:shadow-md"
          />
        </div>
      </div>
    </div>

    <!-- Decorative blurred circles -->
    <div class="absolute top-1/3 left-1/4 w-64 h-64 bg-primary-200/20 rounded-full blur-3xl -z-10" aria-hidden="true"></div>
    <div class="absolute bottom-1/4 right-1/4 w-48 h-48 bg-accent-200/20 rounded-full blur-3xl -z-10" aria-hidden="true"></div>

    <!-- Bottom gradient fade -->
    <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-white to-transparent pointer-events-none" aria-hidden="true"></div>
  </section>

  <!-- ==========================================
       Category Grid Section
       ========================================== -->
  <section class="py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span class="inline-block bg-accent-100 text-accent-500 px-4 py-1.5 rounded-full text-sm font-semibold mb-4">Browse Topics</span>
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-dark-text mb-6">Help categories</h2>
        <p class="text-lg md:text-xl text-light-text max-w-2xl mx-auto">Find the answers you need, organized by topic</p>
      </div>

      <!-- Categories Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

        <!-- Getting Started -->
        <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg border border-gray-100 hover:-translate-y-1 transition-all border-t-4 border-t-primary-500">
          <div class="w-14 h-14 bg-primary-100 rounded-2xl flex items-center justify-center mb-5">
            <!-- Rocket icon -->
            <svg class="w-7 h-7 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 003.02-10.23A15.07 15.07 0 008.38 1.12a14.98 14.98 0 00-3.02 10.23m10.23 3.02l-5.84 2.58M7.36 14.37L3.51 8.52m3.85 5.85l-3.85 5.85m3.85-5.85l5.84-2.58" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-dark-text mb-4">Getting Started</h3>
          <ul class="space-y-3 mb-6">
            <li>
              <a href="#" class="text-light-text hover:text-primary-500 transition-colors text-sm flex items-start gap-2">
                <svg class="w-4 h-4 text-primary-300 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                Setting up your SubMeow account
              </a>
            </li>
            <li>
              <a href="#" class="text-light-text hover:text-primary-500 transition-colors text-sm flex items-start gap-2">
                <svg class="w-4 h-4 text-primary-300 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
