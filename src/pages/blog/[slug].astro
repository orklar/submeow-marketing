            </svg>
          </a>

          <!-- Facebook -->
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-gray-100 hover:bg-primary-100 flex items-center justify-center transition-colors group"
            aria-label="Share on Facebook"
          >
            <svg class="w-4 h-4 text-light-text group-hover:text-primary-500 transition-colors" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
          </a>

          <!-- Copy Link -->
          <button
            class="w-10 h-10 rounded-full bg-gray-100 hover:bg-primary-100 flex items-center justify-center transition-colors group"
            aria-label="Copy link"
          >
            <svg class="w-4 h-4 text-light-text group-hover:text-primary-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- ==========================================
       Back to Blog Link
       ========================================== -->
  <section class="pb-8">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <a href="/blog" class="inline-flex items-center gap-2 text-accent-500 hover:text-accent-600 font-semibold transition-colors group">
        <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to all articles
      </a>
    </div>
  </section>

  <!-- ==========================================
       More Articles
       ========================================== -->
  <section class="py-16 md:py-20 bg-gradient-to-b from-white to-cream/40">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-dark-text mb-3">More articles</h2>
        <p class="text-light-text">Keep reading tips and insights from the SubMeow team</p>
      </div>

      <!-- Related Post Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {relatedPosts.map((relPost) => (
          <a
            href={`/blog/${relPost.slug}`}
            class="group bg-white rounded-2xl shadow-sm hover:shadow-xl border border-gray-100 overflow-hidden transition-all hover:-translate-y-1"
          >
            <!-- Colored Top Bar -->
            <div class={`h-2 ${relPost.categoryColor === 'primary' ? 'bg-primary-500' : 'bg-accent-500'}`} />

            <div class="p-6">
              <!-- Category Badge -->
              <span class={`inline-block px-3 py-1 rounded-full text-xs font-semibold mb-3 ${getCategoryClasses(relPost.categoryColor)}`}>
                {relPost.category}
              </span>

              <!-- Title -->
              <h3 class="text-lg font-bold text-dark-text group-hover:text-accent-500 transition-colors mb-2 line-clamp-2">
                {relPost.title}
              </h3>

              <!-- Excerpt -->
              <p class="text-sm text-light-text leading-relaxed mb-4 line-clamp-2">
                {relPost.excerpt}
              </p>

              <!-- Meta -->
              <div class="flex items-center gap-3 text-xs text-light-text">
                <time datetime={relPost.date}>{formatDate(relPost.date)}</time>
                <span aria-hidden="true">&middot;</span>
                <span>{relPost.readingTime} read</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

</MarketingLayout>

