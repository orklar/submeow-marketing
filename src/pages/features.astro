---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import Button from '../components/Button.astro';

const softwareAppSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "SubMeow",
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "Android, Web",
  "offers": [
    {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD",
      "description": "Free plan"
    },
    {
      "@type": "Offer",
      "price": "4.99",
      "priceCurrency": "USD",
      "description": "Premium monthly"
    },
    {
      "@type": "Offer",
      "price": "9.99",
      "priceCurrency": "USD",
      "description": "Family monthly"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "150"
  }
});
---

<MarketingLayout title="Features - SubMeow" description="Discover all the powerful features SubMeow offers to help you track subscriptions, get smart reminders, scan receipts, and save money." schemaMarkup={[softwareAppSchema]}>

  <!-- ==========================================
       Hero Section
       ========================================== -->
  <section class="relative overflow-hidden bg-gradient-to-b from-white via-orange-50 to-amber-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-16 md:py-24 lg:py-32">
      <div class="text-center max-w-3xl mx-auto">
        <!-- Badge -->
        <span class="inline-block bg-accent-100 text-accent-800 px-4 py-1.5 rounded-full text-sm font-semibold mb-6">Features</span>

        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-dark-text leading-tight mb-6">
          Everything <span class="text-accent-600">Sub</span> can do for you
        </h1>

        <!-- Subtitle -->
        <p class="text-lg md:text-xl text-light-text max-w-2xl mx-auto mb-8 leading-relaxed">
          Powerful, cat-themed features that make subscription tracking effortless. From smart reminders to receipt scanning, Sub has you covered.
        </p>

        <!-- Bouncing Cat -->
        <div class="text-6xl md:text-7xl mb-10 hero-bounce" aria-hidden="true">&#128570;</div>

        <!-- Trust Pills -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6">
          <span class="inline-flex items-center gap-2 bg-white/80 backdrop-blur-sm px-4 py-2 rounded-full shadow-sm border border-gray-100 text-sm text-dark-text font-medium">
            <svg class="w-4 h-4 text-success-500 shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
            No credit card
          </span>
          <span class="inline-flex items-center gap-2 bg-white/80 backdrop-blur-sm px-4 py-2 rounded-full shadow-sm border border-gray-100 text-sm text-dark-text font-medium">
            <svg class="w-4 h-4 text-success-500 shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
            Privacy-first
          </span>
          <span class="inline-flex items-center gap-2 bg-white/80 backdrop-blur-sm px-4 py-2 rounded-full shadow-sm border border-gray-100 text-sm text-dark-text font-medium">
            <svg class="w-4 h-4 text-success-500 shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
            Works offline
          </span>
        </div>
      </div>
    </div>

    <!-- Decorative blurred circles -->
    <div class="absolute top-1/3 left-1/4 w-64 h-64 bg-accent-200/20 rounded-full blur-3xl -z-10" aria-hidden="true"></div>
    <div class="absolute bottom-1/4 right-1/4 w-48 h-48 bg-primary-200/20 rounded-full blur-3xl -z-10" aria-hidden="true"></div>

    <!-- Bottom gradient fade -->
    <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-white to-transparent pointer-events-none" aria-hidden="true"></div>
  </section>

  <!-- ==========================================
       Feature Deep Dives
       ========================================== -->

  <!-- Feature 1: Subscription Tracking (Blue) — text left, mockup right -->
  <section class="py-16 md:py-24 overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Text -->
        <div>
          <div class="w-14 h-14 bg-primary-100 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" /></svg>
          </div>
          <h2 class="text-3xl sm:text-4xl font-bold text-dark-text mb-4">All your subscriptions in one place</h2>
          <p class="text-lg text-light-text leading-relaxed mb-8">
            Stop juggling spreadsheets and sticky notes. Sub keeps every recurring payment organized, searchable, and always up to date.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Manual Entry</p>
                <p class="text-sm text-light-text">Add any subscription in seconds with our intuitive form</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Popular Services Library (270+)</p>
                <p class="text-sm text-light-text">Pick from pre-loaded services with pricing already filled in</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Custom Categories</p>
                <p class="text-sm text-light-text">Organize by entertainment, productivity, health, and more</p>
              </div>
            </li>
          </ul>
        </div>
        <!-- Illustration: Subscription Tracking -->
        <div class="relative flex items-center justify-center">
          <img src="/images/feature-tracking.svg" alt="Cat mascot helping organize subscriptions in one place" class="w-full max-w-md mx-auto lg:ml-auto drop-shadow-xl" width="664" height="400" loading="lazy" />
          <!-- Decorative blob -->
          <div class="absolute -top-8 -right-8 w-32 h-32 bg-primary-100/50 rounded-full blur-2xl -z-10" aria-hidden="true"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature 2: Smart Reminders (Orange) — mockup left, text right -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-white to-accent-50/30 overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Illustration: Smart Reminders (first on mobile, second on desktop) -->
        <div class="relative order-2 lg:order-1 flex items-center justify-center">
          <img src="/images/feature-reminders.svg" alt="Cat mascot sending smart reminder notifications for subscription renewals" class="w-full max-w-md mx-auto lg:mr-auto drop-shadow-xl" width="664" height="400" loading="lazy" />
          <!-- Decorative blob -->
          <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-accent-100/50 rounded-full blur-2xl -z-10" aria-hidden="true"></div>
        </div>
        <!-- Text -->
        <div class="order-1 lg:order-2">
          <div class="w-14 h-14 bg-accent-100 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-accent-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" /></svg>
          </div>
          <h2 class="text-3xl sm:text-4xl font-bold text-dark-text mb-4">Never miss a payment or trial end</h2>
          <p class="text-lg text-light-text leading-relaxed mb-8">
            Sub watches your subscriptions around the clock and nudges you at the right moment, so forgotten trials and surprise charges become a thing of the past.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Trial Expiry Alerts</p>
                <p class="text-sm text-light-text">Get notified days before free trials auto-convert to paid</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Renewal Reminders</p>
                <p class="text-sm text-light-text">Know exactly when each subscription renews and how much</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Custom Notification Timing</p>
                <p class="text-sm text-light-text">Choose when to be reminded: 1 day, 3 days, or 1 week ahead</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature 3: OCR Scanning (Green) — text left, mockup right -->
  <section class="py-16 md:py-24 overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Text -->
        <div>
          <div class="w-14 h-14 bg-green-100 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-success-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
          </div>
          <h2 class="text-3xl sm:text-4xl font-bold text-dark-text mb-4">Snap a receipt, we do the rest</h2>
          <p class="text-lg text-light-text leading-relaxed mb-8">
            Point your camera at any receipt or confirmation email, and Sub will read the details automatically. Adding subscriptions has never been faster.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-success-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Receipt Recognition</p>
                <p class="text-sm text-light-text">Advanced OCR reads service names, amounts, and dates</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-success-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Auto-fill Details</p>
                <p class="text-sm text-light-text">Scanned data fills the form so you just tap confirm</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-success-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Multi-language Support</p>
                <p class="text-sm text-light-text">Reads receipts in 13 supported languages</p>
              </div>
            </li>
          </ul>
        </div>
        <!-- Mockup: Camera / Scan UI -->
        <div class="relative" aria-hidden="true">
          <div class="bg-gray-900 rounded-3xl shadow-2xl p-6 max-w-sm mx-auto lg:ml-auto overflow-hidden">
            <!-- Mock viewfinder -->
            <div class="relative bg-gray-800 rounded-2xl aspect-[3/4] flex items-center justify-center">
              <!-- Scan corners -->
              <div class="absolute top-4 left-4 w-8 h-8 border-t-2 border-l-2 border-success-500 rounded-tl-lg"></div>
              <div class="absolute top-4 right-4 w-8 h-8 border-t-2 border-r-2 border-success-500 rounded-tr-lg"></div>
              <div class="absolute bottom-4 left-4 w-8 h-8 border-b-2 border-l-2 border-success-500 rounded-bl-lg"></div>
              <div class="absolute bottom-4 right-4 w-8 h-8 border-b-2 border-r-2 border-success-500 rounded-br-lg"></div>
              <!-- Scan line -->
              <div class="absolute left-6 right-6 h-0.5 bg-gradient-to-r from-transparent via-success-500 to-transparent scan-line"></div>
              <!-- Fake receipt in center -->
              <div class="bg-white rounded-lg p-4 w-48 shadow-lg">
                <div class="text-center mb-3">
                  <p class="text-xs font-bold text-gray-800">RECEIPT</p>
                  <div class="w-full h-px bg-gray-200 mt-2"></div>
                </div>
                <div class="space-y-1.5">
                  <div class="flex justify-between">
                    <span class="text-[10px] text-gray-600">Spotify Premium</span>
                    <span class="text-[10px] font-bold text-gray-800">$9.99</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-[10px] text-gray-600">Date</span>
                    <span class="text-[10px] text-gray-600">Feb 01, 2026</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-[10px] text-gray-600">Billing</span>
                    <span class="text-[10px] text-gray-600">Monthly</span>
                  </div>
                </div>
              </div>
            </div>
            <!-- Detected badge -->
            <div class="mt-4 bg-success-500/20 border border-success-500/40 rounded-xl px-4 py-2.5 flex items-center gap-2">
              <svg class="w-4 h-4 text-success-500 shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <p class="text-xs text-success-500 font-semibold">Detected: Spotify Premium - $9.99/mo</p>
            </div>
          </div>
          <!-- Decorative blob -->
          <div class="absolute -top-8 -right-8 w-32 h-32 bg-green-100/50 rounded-full blur-2xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature 4: Spending Analytics (Purple/Indigo) — mockup left, text right -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-white to-purple-50/30 overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Illustration: Spending Analytics (first on mobile, second on desktop) -->
        <div class="relative order-2 lg:order-1 flex items-center justify-center">
          <img src="/images/feature-insights.svg" alt="Cat mascot presenting spending analytics and charts" class="w-full max-w-md mx-auto lg:mr-auto drop-shadow-xl" width="664" height="400" loading="lazy" />
          <!-- Decorative blob -->
          <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-purple-100/50 rounded-full blur-2xl -z-10" aria-hidden="true"></div>
        </div>
        <!-- Text -->
        <div class="order-1 lg:order-2">
          <div class="w-14 h-14 bg-purple-100 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
          </div>
          <h2 class="text-3xl sm:text-4xl font-bold text-dark-text mb-4">See where your money really goes</h2>
          <p class="text-lg text-light-text leading-relaxed mb-8">
            Beautiful charts and breakdowns show your spending patterns over time. Spot wasteful subscriptions and find opportunities to save.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-purple-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Monthly Trends</p>
                <p class="text-sm text-light-text">Track how your spending changes month over month</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-purple-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Category Breakdown</p>
                <p class="text-sm text-light-text">See spending by category at a glance</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-purple-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <div>
                <p class="font-semibold text-dark-text">Savings Insights</p>
                <p class="text-sm text-light-text">Get tips on subscriptions you could downgrade or cancel</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature 5: Multi-Currency (Amber) — text left, mockup right -->
  <section class="py-16 md:py-24 overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Text -->
        <div>
          <div class="w-14 h-14 bg-amber-100 rounded-2xl flex items-center justify-center mb-6">
